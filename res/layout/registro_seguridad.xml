<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:background="#ffffff" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgmark"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/datosw" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/seguridadq" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enlacew" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="378dp"
            android:layout_weight="0.42"
            android:background="#c51f50" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
               android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="captura de datos de seguridad"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/pin_uno"
                            android:background="@drawable/edit_text_design"
                            android:textColor="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:inputType="phone"
                            android:password="true"
                            android:layout_marginTop="30dp"
                            android:textColorHint="#ffffff"
                            android:hint="pin (cuatro dígitos)"
                            android:singleLine="true"
                             android:imeOptions="actionNext"
                            android:ems="10"
                           
                           />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/pin_dos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:textColorHint="#ffffff"
                            android:hint="Confirmar pin"
                            android:background="@drawable/edit_text_design"
                            android:ems="10"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:password="true"
                            android:singleLine="true"
                            android:textColor="#ffffff" />

                    </LinearLayout>
                </LinearLayout>

                
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                
                            
                </LinearLayout>
                
               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    
                 <TextView
                            android:id="@+id/Alerta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:text="Alerta:"
                            android:textColor="#F66F89" />

                
                  
                  <TextView
                            android:id="@+id/Alerta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:textColorHint="#ffffff"
                            android:text="El número PUK fue enviado al correo electrónico registrado anteriormente, es muy importante lo guardes en algún lugar seguro, ya que será información esencial para recuperar tu cuenta y será requerido para enlazar tu celular con tu cuenta, así que NO LO PIERDAS."
                            android:textAppearance="?android:attr/textAppearanceSmall" 
                            android:textColor="#ffffff" />                    
                    
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    
                 <EditText
                            android:id="@+id/puk_rs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:textColorHint="#ffffff"
                            android:hint="PUK"
                            android:background="@drawable/edit_text_design"
                            android:ems="10"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="#ffffff" />                  
                    
                </LinearLayout>
                

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:background="#ffffff" >

<Button
    android:id="@+id/aceptar_r"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo_acept_cancel"
    android:text="Aceptar"
    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/iniciar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fondo_acept_cancel"
                    android:text="Cancelar"
                    android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>